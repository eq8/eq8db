#!/usr/bin/env node

'use strict';

const _ = require('lodash');
const program = require('commander');

const pkg = require('../package.json');

/**
 * Program Options
 */
program
	.description('Runs an instance of the eq8db worker')
  .version(pkg.version)
	.option('--log-level <string>', 'The log level for the instance', /^(trace|debug|info|error)$/i)
	.option('--port <num>', 'The port to bind on', parseInt)
	.option('--api-path <string>', 'The API path - e.g. /api')
	.option('--db-host <string>', 'The hostname/IP address of the database')
	.option('--db-port <string>', 'The host port of the database')
	.option('--tls', 'Use TLS')
	.option('--tlscert <path>', 'Path to TLS certificate file - e.g. /opt/eq8db/cert.pem')
	.option('--tlskey <path>', 'Path to TLS key file - e.g. /opt/eq8db/key.pem')
  .parse(process.argv);

const logLevel = _.pick(program, ['logLevel']);
const options = _.pick(program, ['port', 'apiPath']);
const eq8db = require('..')(logLevel);

eq8db.run(options);
