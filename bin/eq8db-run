#!/usr/bin/env node

'use strict';

const _ = require('lodash');
const program = require('commander');

const pkg = require('../package.json');

/**
 * Program Options
 */
program
	.description('Runs an instance of the eq8db worker')
  .version(pkg.version)
	.option('--log-level <string>', 'Set the log level for the instance', /^(trace|debug|info|error)$/i)
	.option('--port <num>', 'The port to bind on', parseInt)
	.option('--api-path <string>', 'The API path - e.g. /api')
	.option('--amqp-dsn <uri>', 'The Data Source Notation (DSN) providing the AMQP service')
	.option('--amqp-queue <string>', 'The queue to subscribe RPC messages on')
	.option('--trx-dsn <uri>', 'The DSN for the service providing transactions')
	.option('--cache-dsn <uri>', 'The DSN for the cache service provider')
	.option('--search-dsn <uri>', 'The DSN for the search/index service provider')
	.option('--log-dsn <uri>', 'The DSN for the log service provider')
	.option('--join <uri>', 'Join an existing eq8db stack')
	.option('--tls', 'Use TLS')
	.option('--tlscert <path>', 'Path to TLS certificate file - e.g. /opt/eq8db/cert.pem')
	.option('--tlskey <path>', 'Path to TLS key file - e.g. /opt/eq8db/key.pem')
  .parse(process.argv);

const logLevel = _.pick(program, ['logLevel']);
const options = _.pick(program, ['apiPath', 'port']);
const eq8db = require('..')(logLevel);

eq8db.run(options);
