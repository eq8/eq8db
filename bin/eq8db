#!/usr/bin/env node

'use strict';

const pkg = require('../package.json');

/**
 * Program Commands
 */
const program = require('commander')
	.description(pkg.description)
	.version(pkg.version)
	.command('deploy', 'Deploy an eq8db stack in Docker')
	.command('teardown', 'Tear down an eq8db stack in Docker')
	.command('serve', 'Run an instance of the eq8db server')
	.command('process', 'Run an instance of the eq8db processor');

require('commander-tabtab').init(program, 'eq8db');

program
	.parse(process.argv);
