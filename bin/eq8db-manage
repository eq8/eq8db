#!/usr/bin/env node

'use strict';

const _ = require('lodash');
const program = require('commander');

const pkg = require('../package.json');

/**
 * Program Options
 */
program
	.description('Runs an instance of the eq8db manager')
  .version(pkg.version)
	.option('--log-level <string>', 'Set the log level for the instance', /^(trace|debug|info|error)$/i)
	.option('--join <uri>', 'Join an existing eq8db stack')
  .parse(process.argv);

const logLevel = _.pick(program, ['logLevel']);
const options = _.pick(program, ['join']);
const eq8db = require('..')(logLevel);

eq8db.run(options);
